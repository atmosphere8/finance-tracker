{
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "*": ["node_modules/*"],
      "@/*": ["src/*"],
      "$app/*": ["src/app/*"],
      "$app": ["src/app/index.ts"],
      "$assets/*": ["src/shared/assets/*"],
      "$assets": ["src/shared/assets/index.ts"],
      "$page/*": ["src/page/*"],
      "$page": ["src/page/index.ts"],
      "$entities/*": ["src/shared/entities/*"],
      "$entities": ["src/shared/entities/index.ts"],
      "$middlewares/*": ["src/shared/middlewares/*"],
      "$middlewares": ["src/shared/middlewares/index.ts"],
      "$styles/*": ["src/shared/assets/styles/*"],
      "$styles": ["src/shared/assets/styles/index.ts"],
      "$fonts/*": ["src/shared/assets/fonts/*"],
      "$fonts": ["src/shared/assets/fonts/index.ts"],
      "$images/*": ["src/shared/assets/images/*"],
      "$images": ["src/shared/assets/images/index.ts"],
      "$slices/*": ["src/shared/states/slices/*"],
      "$slices": ["src/shared/states/slices/index.ts"],
      "$states/*": ["src/shared/states/*"],
      "$states": ["src/shared/states/store.ts"],
      "$helpers/*": ["src/shared/helpers/*"],
      "$helpers": ["src/shared/helpers/index.ts"],
      "$fragments/*": ["src/shared/fragments/*"],
      "$fragments": ["src/shared/fragments/index.ts"],
      "$uis/*": ["src/shared/UIs/*"],
      "$uis": ["src/shared/UIs/index.ts"],
      "$types/*": ["src/shared/types/*"]
    },
    "jsx": "react",
    "moduleResolution": "Node",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "target": "ESNext",
    "useDefineForClassFields": true,
    "lib": ["DOM", "DOM.Iterable", "ESNext"],
    "allowJs": false,
    "allowSyntheticDefaultImports": true,
    "module": "ESNext",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true
  },
  "include": ["src"]
}
